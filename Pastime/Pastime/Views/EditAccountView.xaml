<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Padding="20" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Pastime.Views.EditAccountView" NavigationPage.HasNavigationBar="true">
    <ScrollView>
        <StackLayout>
            <Label HorizontalOptions="Center" Text="Edit Account" />

            <Label Text="Change username" />
            <Editor Placeholder="{Binding Name}" />

            <Label Text="Change email" />
            <Editor Placeholder="{Binding Email}" />



            <!-- TODO picker data should come from inbuilt collection of sports -->
            <Picker x:Name="sportPicker"
                    Title="Pick your favourite sport"
                    >
                <Picker.ItemsSource> 
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Cricket</x:String>
                        <x:String>Basketball</x:String>
                        <x:String>Cricket</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label Text="Location" />


            <Button Text="Submit" BackgroundColor="gray" TextColor="white" />

                
        </StackLayout>
    </ScrollView>

</ContentPage>
